<form method="POST" action="/add">
    <div class="form-group">
        <label for="Name">Item name</label>
        <input class="form-control" type="text" id="Name" name="Name" value="" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input class="form-control" type="text" id="Description" name="Description" value="" />
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="IsVisible" name="IsVisible" value="true" />
        <label class="form-check-label" for="IsVisible">Item visible?</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Add new item"/>
    </div>
</form>