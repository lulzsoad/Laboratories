@model CompanyModel

<h1>Company management</h1>

<h2>Add new company</h2>

@using(Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(X => X.Name, "Company Name")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(X => X.Description, "Company description")
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(x => x.IsVisible, new { @class = "form-check-input"})
        @Html.LabelFor(X => X.IsVisible, "Visible?", new { @class = "form-check-label"})
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add company</button>
    </div>
}
